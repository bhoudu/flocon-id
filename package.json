{
  "name": "flocon-id",
  "version": "0.1.0",
  "description": "Produce unique time ordered ids like snowflake",
  "homepage": "https://github.com/bhoudu/flocon-id",
  "bugs": "https://github.com/bhoudu/flocon-id/issues",
  "author": "Benjamin Houdu",
  "engines": {
    "node": ">= 0.16.0"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git@github.com:bhoudu/flocon-id.git"
  },
  "keywords": [
    "nanoid",
    "id",
    "generator",
    "snowflake",
    "flocon",
    "flocon-id"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "olsbuild": "tsc -p tsconfig.json",
    "build": "node ./esbuild.js",
    "test": "cross-env NODE_ENV?=test TZ=UTC jest --config jest.config.js --colors --detectOpenHandles --forceExit --no-cache --runInBand",
    "lint": "eslint 'src/**/*.ts' --fix-dry-run",
    "verify": "npm-run-all verify:mkdir verify:clean verify:json",
    "verify:mkdir": "mkdirp reports",
    "verify:clean": "rimraf reports/yarn-audit.json",
    "verify:json": "yarn audit --json > reports/yarn-audit.json",
    "release": "semantic-release"
  },
  "main": "lib/flocon.js",
  "types": "lib/flocon.d.ts",
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "date-fns": "^2.30.0",
    "nanoid": "^3.3.6"
  },
  "devDependencies": {
    "@esbuild-kit/cjs-loader": "^2.4.2",
    "@types/jest": "29.5.1",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cross-env-default": "^5.1.3-1",
    "esbuild": "^0.17.18",
    "esbuild-jest": "^0.5.0",
    "esbuild-plugin-pino": "^2.0.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-html-reporter": "^3.9.0",
    "jest-sonarcloud-reporter": "^1.0.1",
    "pino": "^8.14.1",
    "prettier": "^2.8.4",
    "rimraf": "^5.0.0",
    "typescript": "^4.9.5",
    "yarn-audit-fix": "^9.3.9"
  },
  "jestSonar": {
    "withRelativePaths": true,
    "reportPath": "reports",
    "reportFile": "test-report.xml"
  }
}
